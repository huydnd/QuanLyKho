<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/suppliesImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/suppliesNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Tên vật tư"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/suppliesImageView"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/suppliesUnitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suppliesNameText"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Đơn vị"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/suppliesImageView"
        app:layout_constraintTop_toBottomOf="@+id/suppliesNameText"></TextView>

    <ImageButton
        android:id="@+id/editSuppliesIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_48"
        app:layout_constraintEnd_toStartOf="@+id/delSuppliesIconButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/delSuppliesIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>