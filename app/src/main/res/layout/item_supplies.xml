<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/suppliesNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:text="Tên vật tư"
        android:textSize="25dp">
    </TextView>

    <TextView
        android:id="@+id/suppliesUnitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/suppliesNameText"
        android:textSize="20dp"
        android:text="Đơn vị">
    </TextView>

    <ImageButton
        android:id="@+id/editSuppliesIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/suppliesNameText"
        android:background="@null"
        android:src="@drawable/edit_icon_48" />

    <ImageButton
        android:id="@+id/delSuppliesIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/editSuppliesIconButton"
        android:background="@null"
        android:src="@drawable/del_icon_48" />


</RelativeLayout>